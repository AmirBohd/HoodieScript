{
    "name": "hoodiescript-vscode",
    "displayName": "HoodieScript-vscode",
    "description": "Visual Studio Code extension for HoodieScript",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.62.0"
    },
    "categories": [
        "Snippets"
    ],
    "activationEvents": [
        "onLanguage:lua"
    ],
    "console": "integratedTerminal",
    "main": "main.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/NamelessHoodie/HoodieScript"
    },
    "license" : {
        "type" : "MIT",
        "url" : "https://www.opensource.org/licenses/mit-license.php"
    },
    "contributes": {
        "snippets": [
            {
                "language": "lua",
                "path": "./snippets/snippets.json"
            }
        ]
    }
}
